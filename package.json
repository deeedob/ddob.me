{
  "name": "ddob-website",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:css\" \"npm:dev:js\" \"npm:dev:zola\"",
    "dev:css": "tailwindcss --watch -i ./css/main.css -o ./static/css/main.css",
    "dev:js": "NODE_ENV=development node ./build.js --watch",
    "dev:zola": "zola serve",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss --minify -i ./css/main.css -o ./static/css/main.css",
    "build:js": "NODE_ENV=production node ./build.js",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "@codemirror/lang-cpp": "^6.0.3",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.6",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.18",
    "@replit/codemirror-vim": "^6.3.0",
    "codemirror": "^6.0.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.11"
  }
}
